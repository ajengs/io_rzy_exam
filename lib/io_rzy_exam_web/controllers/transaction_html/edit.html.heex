<.header>
  Update secret <%= @transaction.id %>
</.header>

<.simple_form :let={f} for={@changeset} action={~p"/transactions/#{@transaction}"}>
  <.error :if={@changeset.action}>
    Oops, something went wrong! Please check the errors below.
  </.error>
  <.input field={f[:secret]} type="text" label="Secret" />
  <:actions>
    <.button>Update secret</.button>
  </:actions>
</.simple_form>

<.back navigate={~p"/transactions"}>Back to transaction list</.back>
